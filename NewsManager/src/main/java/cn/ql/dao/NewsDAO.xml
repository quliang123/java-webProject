<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.ql.dao.INewsDAO">

    <select id="getTalkCount" resultType="int">
           select COUNT(1) from news,talk where Newsid=Tid and Newsid=#{Newsid}
    </select>

    <select id="getOnePageData" resultType="news">
        select * from news limit #{page.pageIndex},#{page.pageSize};
    </select>

    <select id="getCount" resultType="int">
        select COUNT(1) from news;
    </select>

    <update id="updateCount">
      update news set Clickcount=#{Clickcount} where Newsid=#{Newsid}
    </update>
</mapper>
