<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.ql.dao.ItalkDAO">

    <select id="getTalkList" resultType="talk">
        SELECT * FROM talk WHERE nid=#{nid}
    </select>

    <insert id="addTalk">
     insert into talk(`Content`,`Talktime`,`Nid`) VALUE (#{content},#{talktime},#{nid})
    </insert>
</mapper>