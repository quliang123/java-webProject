<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.ISonDAO">

    <resultMap id="sonMapper" type="son">
        <id column="id" property="id"></id>
        <result column="name" property="name"/>
        <association property="persons" javaType="person">
            <id column="id" property="id"></id>
            <result column="userName" property="userName"/>
        </association>
    </resultMap>

    <select id="findSonById" resultMap="sonMapper">
SELECT person.`id`,son.`id`,son.`name`,person.`userName` from person,son where person.`id` = son.`id` and son.`id`=#{id}
    </select>
</mapper>